<T3DataStructure>
 <meta>
       <langDisable>1</langDisable>
 </meta>
    <sheets>
    <sDEF>
        <ROOT>
            <TCEforms>
                <sheetTitle>General</sheetTitle>
            </TCEforms>
            <type>array</type>
            <el>
                
                <webSearchScope>
                    <TCEforms>
                        <label>Search web pages</label>
                        <config>
                            <default>local</default>
                            <type>radio</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Show LTH result first with LU option</numIndex>
                                        <numIndex index="1">local</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Show just LU results</numIndex>
                                        <numIndex index="1">global</numIndex>
                                    </numIndex>
                               </items>
                        </config>
                    </TCEforms>
                </webSearchScope>
                
                <linkStaffDetailPage>
                    <TCEforms>
                        <label>Link to staff detail page</label>
                        <onChange>reload</onChange>
                        <config>
                            <default>no</default>
                            <type>radio</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Yes</numIndex>
                                        <numIndex index="1">yes</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">No</numIndex>
                                        <numIndex index="1">no</numIndex>
                                    </numIndex>
                               </items>
                        </config>
                    </TCEforms>
                </linkStaffDetailPage>
                
                <noPublicationsToShow>
                    <TCEforms>
                    <label>No of publications to show (in single mode)</label>
                    <displayCond>FIELD:linkStaffDetailPage:=:yes</displayCond>
                    <config>
                        <type>select</type>
                        <items type="array">
                        <numIndex index="0" type="array">
                        <numIndex index="0">5</numIndex>
                        <numIndex index="1">5</numIndex>
                        </numIndex>
                        <numIndex index="1" type="array">
                        <numIndex index="0">10</numIndex>
                        <numIndex index="1">10</numIndex>
                        </numIndex>
                        <numIndex index="2" type="array">
                        <numIndex index="0">15</numIndex>
                        <numIndex index="1">15</numIndex>
                        </numIndex>
                        <numIndex index="3" type="array">
                        <numIndex index="0">25</numIndex>
                        <numIndex index="1">25</numIndex>
                        </numIndex>
                        <numIndex index="4" type="array">
                        <numIndex index="0">All</numIndex>
                        <numIndex index="1">3000</numIndex>
                        </numIndex>
                        </items>
                        <maxitems>1</maxitems>
                        <size>1</size>
                        <default>5</default>
                        <selectedListStyle>width:200px</selectedListStyle>
                        <itemListStyle>width:200px</itemListStyle>
                    </config>
                 </TCEforms>
             </noPublicationsToShow>

        </el>
     </ROOT>
</sDEF>

</sheets>
</T3DataStructure>